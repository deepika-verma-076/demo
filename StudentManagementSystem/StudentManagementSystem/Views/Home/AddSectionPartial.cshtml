@{
    Layout = null;
}

@model StudentManagementSystem.Models.Section


<script type="text/javascript">
    function UploadSection() {

        $.ajax(
           {
               url: '/Home/UploadSection',
               type: 'POST',
               data: $('#formLeaderEdit').serialize(),
               //contentType: 'application/json; charset=utf-8',
               success: function (data) {
                   $('#myModalStd').modal('hide');
                   $("#viewload").html(data);
               },
               error: function () {
                   alert("error");
               }
           });
    }

</script>

<div>
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        <h2 class="modal-title" id="myModalLabel" style="text-align: center;"> Add Section </h2>
    </div>

    <form id="formLeaderEdit" method="post" style="padding: 50;">
        <div class="editor-label">
            @Html.Label("Section Name", new { @name = "name", required = "required", type = "text", id = "lblName" })
        </div>
        <div class="editor-label">
            @Html.TextBoxFor(m => m.Name)
        </div>
        <br />
        <div>
            <p>
                <input type="button" name="Update" value="Submit" onclick="UploadSection()" />
            </p>
        </div>
    </form>
</div>



